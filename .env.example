# Environment Configuration
ENVIRONMENT=development
DEBUG=true

# Security
SECRET_KEY=your-secret-key-here-min-32-characters
ACCESS_TOKEN_EXPIRE_MINUTES=480
REFRESH_TOKEN_EXPIRE_DAYS=30

# Database
DATABASE_URL=postgresql://mealsplit:password@localhost:5432/mealsplit

# Redis
REDIS_URL=redis://localhost:6379/0

# CORS Settings
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_HOSTS=localhost,127.0.0.1

# External APIs
OPENAI_API_KEY=your-openai-api-key
SPLITWISE_CLIENT_ID=your-splitwise-client-id
SPLITWISE_CLIENT_SECRET=your-splitwise-client-secret
SPLITWISE_REDIRECT_URI=http://localhost:8000/api/v1/splitwise/oauth/callback

# File Storage
UPLOAD_DIR=/tmp/uploads
MAX_UPLOAD_SIZE=10485760

# Email Configuration (Optional)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=your-email@gmail.com
EMAILS_FROM_NAME=MealSplit

# Testing
TESTING=false